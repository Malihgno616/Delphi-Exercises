{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
var
  x: integer;

begin

  x := 0;

  memo1.Clear;

    while x >=10 do
        begin
        x := x + 1;
        memo1.Lines.Add(inttostr(x));
    end;



