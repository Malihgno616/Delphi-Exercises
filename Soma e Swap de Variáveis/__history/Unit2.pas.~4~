{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
var
  valor1, valor2, total : integer;

begin

  valor1 := 0;
  valor2 := 0;
  total  := 0;

  valor1 := strtoint(edit1.Text);
  valor2 := strtoint(edit2.Text);
  total := valor1 + valor2;


end;

end.
